FROM nginx:alpine

COPY cmd/simple-web/nginx.conf /etc/nginx/conf.d/default.conf
COPY cmd/simple-web/index.html /usr/share/nginx/html/index.html

EXPOSE 8091

HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget -q --spider http://localhost:8091/ || exit 1

CMD ["nginx", "-g", "daemon off;"]
