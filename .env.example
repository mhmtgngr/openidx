# OpenIDX Environment Configuration

# Environment
APP_ENV=development
LOG_LEVEL=debug

# Database
DATABASE_URL=postgres://openidx:openidx_secret@localhost:5432/openidx?sslmode=disable
POSTGRES_PASSWORD=openidx_secret

# Redis
REDIS_URL=redis://:redis_secret@localhost:6379
REDIS_PASSWORD=redis_secret

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Keycloak
KEYCLOAK_URL=http://localhost:8180
KEYCLOAK_REALM=openidx
KEYCLOAK_CLIENT_ID=openidx-api
KEYCLOAK_ADMIN_PASSWORD=admin

# OPA
OPA_URL=http://localhost:8181

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Frontend
VITE_API_URL=http://localhost:8080
VITE_KEYCLOAK_URL=http://localhost:8180
VITE_KEYCLOAK_REALM=openidx
VITE_KEYCLOAK_CLIENT_ID=admin-console

# SMTP (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@openidx.io
